# ============================================================================
# SUPABASE CONFIGURATION (Primary Database)
# ============================================================================
# Get these from: https://app.supabase.com > Your Project > Settings > API

# Supabase Project URL
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Supabase Service Role Key (SECRET - for backend only, NOT the anon key)
# This key bypasses Row Level Security - keep it secret!
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-service-role-key

# ============================================================================
# AI / OPENAI CONFIGURATION
# ============================================================================
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4-turbo

# ============================================================================
# Authentication & Security
# ============================================================================
# Generate JWT secret with: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200  # 30 days (for production, consider shorter duration)

# ============================================================================
# REDIS & CELERY CONFIGURATION
# ============================================================================
# Install Redis: brew install redis (Mac) or apt-get install redis (Linux)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Celery Configuration
CELERY_TASK_TIME_LIMIT=600  # 10 minutes
CELERY_TASK_SOFT_TIME_LIMIT=540  # 9 minutes
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAY=60  # seconds

# ============================================================================
# MARKETPLACE API INTEGRATIONS
# ============================================================================

# eBay API Configuration
# Get credentials at: https://developer.ebay.com/
EBAY_CLIENT_ID=your-ebay-client-id
EBAY_CLIENT_SECRET=your-ebay-client-secret
EBAY_REDIRECT_URI=http://localhost:8000/api/marketplace/ebay/callback
EBAY_ENVIRONMENT=sandbox  # or 'production'

# Etsy API Configuration
# Get credentials at: https://www.etsy.com/developers/
ETSY_API_KEY=your-etsy-api-key
ETSY_API_SECRET=your-etsy-api-secret
ETSY_REDIRECT_URI=http://localhost:8000/api/marketplace/etsy/callback

# Reddit API Configuration
# Get credentials at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=VintageJeansMarketplace/1.0
REDDIT_USERNAME=optional-for-authenticated-access
REDDIT_PASSWORD=optional-for-authenticated-access

# Marketplace Sync Settings
MARKETPLACE_SYNC_INTERVAL_HOURS=6  # Sync every 6 hours
MARKETPLACE_MAX_LISTINGS_PER_SYNC=1000
MARKETPLACE_ENABLE_AI_ANALYSIS=true

# ============================================================================
# SELLER PLATFORM INTEGRATIONS (OAuth for seller accounts)
# ============================================================================
# These are for sellers connecting THEIR accounts

# OAuth Credentials - Whatnot
WHATNOT_CLIENT_ID=your-whatnot-client-id
WHATNOT_CLIENT_SECRET=your-whatnot-client-secret
WHATNOT_REDIRECT_URI=http://localhost:8000/api/sellers/callback/whatnot

# Social Media Integration
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
FACEBOOK_PAGE_ID=your-facebook-page-id
TIKTOK_ACCESS_TOKEN=your-tiktok-token

# Email (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@vintagejeans.com

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
